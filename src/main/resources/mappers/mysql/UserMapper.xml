<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.mappers.UserMapper">
	<resultMap id="BaseResultMap" type="com.web.entity.User">
		<id column="id" property="id" />
		<result column="user_name" property="userName" />
		<result column="account" property="account" />
		<result column="password" property="password" />
		<result column="identificationNo" property="identificationNo" />
		<result column="mobile" property="mobile" />
		<result column="sex" property="sex" />
		<result column="enabled" property="enabled" />
		<result column="create_Name" property="createName" />
		<result column="create_Date" property="createDate" />
		<result column="remark" property="remark" />
		<result column="deleted" property="deleted" />
		<result column="superAdmin" property="superAdmin" />
		<result column="update_Name" property="updateName" />
		<result column="update_date" property="updateCreate" />
	</resultMap>

	<select id="selectOneById" resultMap="BaseResultMap">
		select * from t_s_user
		where id = #{id}
	</select>
	<select id="getUserByName" resultMap="BaseResultMap">
		select * from t_s_user
		where user_name = #{username}
	</select>
	<select id="getAll" resultMap="BaseResultMap">
		select * from t_s_user
	</select>
	<insert id="save" flushCache="true" parameterType="com.web.entity.User">
		INSERT INTO
		t_s_user (
		id,
		user_name,
		account,
		password,
		identificationNo,
		mobile,
		sex,
		enabled,
		creator_Id,
		create_Time,
		remark,
		superAdmin
		)
		VALUES (
		#{id},
		#{user_name},
		#{account},
		#{password},
		#{identificationNo},
		#{mobile},
		<choose>
			<when test="sex !=null and sex !=''">
				#{sex},
			</when>
			<otherwise>
				0,
			</otherwise>
		</choose>
		<choose>
			<when test="enabled !=null and enabled !=''">
				#{enabled},
			</when>
			<otherwise>
				0,
			</otherwise>
		</choose>
		#{creator_Id},
		new(),
		#{remark},
		<choose>
			<when test="superAdmin != null and superAdmin !=''">
				#{superAdmin}
			</when>
			<otherwise>
				0,
			</otherwise>
		</choose>
		)
	</insert>
	<update id="update" flushCache="true" parameterType="com.web.entity.User">
		UPDATE
		t_s_user SET
		user_name=#{user_name},
		account=#{account},
		password=#{password},
		update_Name=#{updateName},
		update_date=#{updateCreate},
		<choose>
		<when test="identificationNo !=null and identificationNo !=''">
		identificationNo=#{identificationNo},
		</when>
		<otherwise>
		null,
		</otherwise>
		</choose>
		<choose>
		<when test="mobile !=null and mobile !=''">
		mobile=#{mobile},
		</when>
		<otherwise>
		null,
		</otherwise>
		</choose>
		<choose>
		<when test="sex !=null and sex !=''">
		sex=#{sex},
		</when>
		<otherwise>
		0,
		</otherwise>
		</choose>
		<choose>
		<when test="enabled !=null and enabled !=''">
		enabled=#{enabled},
		</when>
		<otherwise>
		0,
		</otherwise>
		</choose>
		<choose>
		<when test="remark !=null and remark !=''">
		remark=#{remark},
		</when>
		<otherwise>
		null,
		</otherwise>
		</choose>
		<choose>
		<when test="superAdmin !=null and superAdmin !=''">
		superAdmin=#{superAdmin},
		</when>
		<otherwise>
		0
		</otherwise>
		</choose>
		WHERE ID=#{id}
	</update>

	<delete id="delete" flushCache="true" parameterType="String">
		DELETE from
		t_s_user where id = #{id}
	</delete>
	

	<select id="getByPage" resultMap="BaseResultMap">
		select * from t_s_user
	</select>
	<!--是否启用用户  -->
	<update id="updateUserEnabled" flushCache="true" parameterType="Object">
	UPDATE t_s_user SET enabled=#{enabled} where id=#{id}
	</update>
	<!--是否逻辑删除  -->
	<update id="updateUserDelete" flushCache="true" parameterType="Object">
	UPDATE t_s_user SET deleted=#{deleted} where id=#{id}
	</update>
	<!--修改密码-->
	<update id="updateUserPassword" flushCache="true" parameterType="com.web.entity.User">
		UPDATE t_s_user SET password=#{password} where id=#{id}
	</update>
	
</mapper>